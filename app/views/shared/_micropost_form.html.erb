<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("micropost.compose_micropost") %>
  </div>
  <%= f.submit t("common.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :image, accept: Settings.micropost.view_type %>
  </span>
<% end %>
